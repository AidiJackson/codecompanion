modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[deployment]
deploymentTarget = "autoscale"
run = ["codecompanion", "--dashboard"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Control Tower Dashboard"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "codecompanion --dashboard"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3003

[[ports]]
localPort = 5050
externalPort = 3000

[[ports]]
localPort = 7860
externalPort = 3001

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 8001
externalPort = 3002

[[ports]]
localPort = 8501
externalPort = 80

[[ports]]
localPort = 38547
externalPort = 4200

[agent]
integrations = [
  "python_anthropic==1.0.0",
  "python_openai==1.0.0",
  "python_gemini==1.0.0"
]
