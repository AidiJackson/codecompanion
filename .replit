modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[deployment]
deploymentTarget = "autoscale"
run = ["python", "server.py"]

[workflows]
runButton = "FastAPI Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python server.py"
waitForPort = 5050

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5050
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 8000

[agent]
integrations = [
  "python_anthropic==1.0.0",
  "python_openai==1.0.0",
  "python_gemini==1.0.0"
]