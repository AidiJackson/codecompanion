+                self.score += random.randint(10, 100)
+                print(f"Score: {self.score}")
+            elif action == 'r':
+                self.lives -= 1
+                print(f"Ball lost! Lives left: {self.lives}")
+            else:
+                print("Invalid action. Try again.")
+
