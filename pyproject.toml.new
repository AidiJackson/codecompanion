[build-system]
requires = ["setuptools>=68", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "codecompanion"
version = "0.1.0"
description = "CodeCompanion launcher for Replit shells with built-in agent bootstrap"
requires-python = ">=3.9"
dependencies = [
    "httpx>=0.28.0",
    "fastapi>=0.115.0",
    "uvicorn[standard]>=0.30.0",
    "pydantic>=2.0.0",
    "pydantic-settings>=2.0.0",
    "typer>=0.12.0",
    "anthropic>=0.40.0",
    "openai>=1.0.0",
    "google-generativeai>=0.8.0",
    "streamlit>=1.50.0",
    "pandas>=2.0.0",
    "numpy>=1.24.0",
    "plotly>=5.18.0",
    "scikit-learn>=1.3.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=8.0.0",
    "pytest-asyncio>=0.23.0",
    "pytest-cov>=4.1.0",
    "ruff>=0.8.0",
    "pyright>=1.1.380",
    "ipython>=8.12.0",
]

[project.scripts]
codecompanion = "codecompanion.cli:main"

[tool.setuptools]
include-package-data = true

[tool.setuptools.packages.find]
include = ["codecompanion*"]

[tool.setuptools.package-data]
"codecompanion.defaults" = ["*.txt", "*.json"]
